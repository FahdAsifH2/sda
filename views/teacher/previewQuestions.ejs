<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Preview Questions</title>
    <link rel="stylesheet" href="/css/preview.css"> <!-- Make sure to link your CSS -->
</head>
<body>
    <div class="container">
       

 
        <h1>Preview Questions</h1>
        <% if (questions && Array.isArray(questions) && questions.length > 0) { %>
            <% questions.forEach((question, index) => { %>
                <div class="question-card">
                    <h2>Test Name: <%= question.testName %></h2> <!-- Display the test name -->
                    <h2>Question <%= index + 1 %>: <%= question.question %></h2>
                    <ul>
                        <% if (question.options && Array.isArray(question.options)) { %>
                            <% question.options.forEach((option, optionIndex) => { %>
                                <li>
                                    <strong>Option <%= option.option %>:</strong> <%= option.text %>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li>No options available</li>
                        <% } %>
                    </ul>
                    <p><strong>Correct Option:</strong> <%= question.correctOption %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p>No questions found.</p>
        <% } %>
        




    </div>
</body>
</html>
